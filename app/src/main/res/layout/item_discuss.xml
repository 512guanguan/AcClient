<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginBottom="@dimen/card_margin"
        app:cardBackgroundColor="?attr/cardViewColor"
        app:cardCornerRadius="4dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="true"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/discuss_pid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000"
                android:textColor="#dcdcdc"/>

            <TextView
                android:id="@+id/discuss_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="新手注意一下格式，以后都这样，加油！！！"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/disucss_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="贺宇成"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/discuss_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="2015-11-04 18:20:36"
                    android:textSize="14sp"/>

            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>