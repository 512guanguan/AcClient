<resources>
    <style name="list">
        <item name="android:background">#ffaaee</item>
    </style>

    <style name="Card">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">5dp</item>
        <item name="android:foreground">@drawable/cardview_foreground</item>
    </style>

    <style name="Card.ProblemItem">
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">8dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="android:foreground">@drawable/cardview_foreground</item>
        <item name="cardBackgroundColor">?attr/cardViewColor</item>
    </style>

    <style name="HelloEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:lines">1</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textColorHint">@color/colorWhite</item>
    </style>

    <style name="HelloEditText.Password" >
        <item name="android:fontFamily">null</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.Hint" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="HelloTextInputLayout">
    </style>

    <style name="HelloTextInputLayout.Normal">
        <item name="hintTextAppearance">@style/TextAppearance.App.TextInputLayout.Hint</item>
    </style>

    <style name="HelloTextInputLayout.Warning">
    </style>

    <style name="HelloButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/button_item_background</item>
        <item name="android:foreground">@drawable/button_item_background</item>
    </style>

    <style name="HelloButton.Login">
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="HelloButton.Register">
        <item name="android:textColor">@color/colorGreen</item>
    </style>

    <style name="HelloTitle">
        <item name="android:text">@string/app_name</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">27sp</item>
    </style>

    <style name="HelloLogo">
        <item name="android:src">@mipmap/ic_launcher</item>
        <item name="android:layout_width">150dp</item>
        <item name="android:layout_height">150dp</item>
        <item name="android:layout_gravity">top|center</item>
    </style>
</resources>
