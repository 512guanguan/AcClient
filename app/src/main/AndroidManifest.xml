<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="thereisnospon.acclient">

    <!-- To auto-complete the email text field in the login form with the user's emails -->

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".modules.problem_list.HdojActivity"
            android:label="题目列表"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.problem_detail.ShowProblemActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.search_people.SearchPeopleActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.user_detail.UserDetailActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.submmit_status.SubmmitStatusActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".DebugActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.show_code.CodeActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.settings.SettingActivity"
            android:label="设置"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.submit.SubmmitAnwserActivity"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.rank.RankActivity"
            android:label="用户列表"
            android:launchMode="singleTask"
            android:windowSoftInputMode="adjustResize"/>
        <activity
            android:name=".modules.hello.LoginActivity"
            android:theme="@style/AppTheme.Hello"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.about.AboutActivity"
            android:label="关于"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.discuss.DiscussActivity"
            android:label="题目讨论"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.note.NoteActivity"
            android:label="笔记"
            android:launchMode="singleTask"/>
        <activity
            android:name=".modules.hello.RegisterActivity"
            android:label="注册"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.Hello"
            android:windowSoftInputMode="adjustResize"/>
    </application>

</manifest>