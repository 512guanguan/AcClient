        <activity android:name=".modules.show_code.CodeActivity"></activity>
        <activity
            android:name=".modules.settings.SettingActivity"
            android:label="设置"></activity>
        <activity android:name=".modules.submmit.SubmmitAnwserActivity"></activity>
        <activity
            android:name=".modules.rank.RankActivity"
            android:label="用户列表"></activity>
        <activity android:name=".modules.hello.HelloActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".modules.about.AboutActivity"></activity>
    </application>

</manifest>